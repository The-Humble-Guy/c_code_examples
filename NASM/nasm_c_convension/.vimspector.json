
{
  "configurations": {
    "Python: Attach To Vim": {
      "variables": {
        "port": "5678",
        "host": "localhost"
      },
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "attach"
      }
    },
    "CPP: Run current script": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/lr5",
        "args": [ "*${args:--update-gadget-config}" ],
        "justMyCode#json": "${justMyCode:true}"
      }
    }
  }
}
 
